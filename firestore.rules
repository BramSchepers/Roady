rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write only their own profile (e.g. language preference).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Theory chapters/lessons: anyone can read (app content). Write via console or admin only.
    match /theoryChapters/{chapterId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
